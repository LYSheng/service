@model FrontSDK.Domain.DxlqOrderPackageCount
@{
    ViewBag.Title = "历史订单列表";
    Layout = "../Shared/_LayoutFooter.cshtml";
}
@section Head
{
    @WebHelper4H5.RegisterStyles("malls/order.css")

}
<div class="historyList">
    <div id="proList" data-bind="foreach:orderModel.orderList" style="display:none">
        <!--订单列表-->
        <section class="orderSec mt4 white-bg">
            <h2 class="historyorderCode pt2 pb2"><i data-bind="text:supplierName"></i><br /><i data-bind="text:creatTime"></i><span class="fr orderStatus fs12" data-bind="text:orderStatus">-</span></h2>
            <div class="promercList">
                <!--商铺列表start-->
                <a data-bind='attr:{"href":"./historyOrderDetail?orderId="+orderId}'>
                    <div class="promercSec">
                        @*<h2 class="fs12 storename">夏琳服饰经销商</h2>*@
                        <div class="storeProList" data-bind="foreach:data">
                            <!--商品列表start-->
                            <div class="storeComRpro">
                                <ul class="parbox">
                                    <li class="imgBox">
                                        <img data-bind='attr:{"src":src}' onerror="this.src = '/content/images/defaultAvatar.png'" />
                                    </li>
                                    <li class="flex1 pl20 fs12">
                                        <p class="textlist" data-bind='text:longName'>-</p>
                                        <p class="spec">
                                            已选:<span class="specDetail" data-bind="text:specs">-</span>
                                            <br />
                                        </p>
                                    </li>
                                    <li class="relProdeil ar">
                                        <p class="price fs11"><strong data-bind='text:"￥"+salesPrices'>-</strong></p>
                                        <p class="amont" data-bind='text:"x"+count'>-</p>
                                    </li>

                                </ul>
                            </div>
                            <!--商品列表end-->
                        </div>
                    </div>
                </a>
                <!--商铺列表end-->
            </div>
            </a>
            <p class="totalsettleResult fs12 pl20 pr20">
                共<strong class="pl10 pr10" data-bind="text:total">-</strong>件商品
                <span class="fr ">
                    小计：<strong class="fs15 total" data-bind='text:"￥"+paidAmount'>-</strong>
                    <i class="fs10" data-bind='text:"含运费：￥"+postfee'>-</i>
                </span>
            </p>

        </section>
    </div>
</div>
<div class="popback"></div>
<input type="hidden" id="userId"  value="@Request["userId"]"/>

@section Footer
{

}
@section Scripts
{
    <script>
        var PGIUrl = "@System.Configuration.ConfigurationManager.AppSettings["PGIUrl"]";
    </script>
    <script src="@System.Configuration.ConfigurationManager.AppSettings["H5Url"]Content/Scripts/Account/historyOrder.js"></script>
}
