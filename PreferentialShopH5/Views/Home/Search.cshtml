@using Service.Site;
@{
    ViewBag.Title = "搜索";
    Layout = "~/Views/Shared/_LayoutFooter.cshtml";
}
@section Head
{
    @WebHelper4H5.RegisterStyles("search/search.css")
    @*@WebHelper4H5.RegisterStyles("shoppingCart.css")*@
}
@RenderPage("~/Views/Shared/_PartialSearchHeader.cshtml")
<div class="conditionSort parbox ac white-bg condisNone" id="conditionSort">
    <div class="flex1 fs14 cur">综合</div>
    <div class="flex1 fs14">新品</div>
    @*<div class="flex1 fs14">销量</div>*@
    <div class="flex1 fs14">价格<span></span></div>
</div>
<article>
    <!--搜索记录热门开始-->
    <div class="searchCordContriner pb4">
        <div class="hotSearch-title border0">
            <img src="~/Content/Images/hotIcon.png" /> <span class="hotSearch-txt">热门搜索</span>
        </div>

        <div class="hotSearch-content mb8" data-bind="foreach:hotSearchlist">
            <span onclick="searchGoods(this)" data-bind="text:queryValue"></span>
            <div class="noHotSearchData">还没有热门搜索</div>
        </div>
        <div class="historySearch-title">
            <img src="~/Content/Images/timer.png" /> <span class="hotSearch-txt">历史搜索</span>
        </div>

        <div class="historySearch-content " data-bind="foreach:historySearchList">
            <span onclick="searchGoods(this)" data-bind="text:queryValue"></span>

        </div>
        <div class="noHistorysearchData">您还没有搜索商品</div>
        <div class="homeSearchBtn-div">
            <img src="~/Content/Images/garbigeIcon.png" />清除历史记录
        </div>
    </div>
    <!--搜索记录热门结束-->
    <!--搜索的内容开始-->
    @*<div class="searchPrompt" >
        <ul data-bind="foreach:searchPrompt">
            <li class="fs14" data-bind="text:queryValue"></li>
        </ul>
    </div>*@
    
    <ul class="searchItem pl20 pr20" data-bind="foreach:searchResultList" id="shop">
        <li class="goodslist_item">
            <a data-bind='attr:{href:"/product/detail?activityId="+promotionId}'>
                <img data-bind="attr:{src:src}" class="goodslist_item1">
                <p data-bind="text: productName"></p>
                <!-- ko if:isMemberOnly==1 -->
                <div class="goods_price">
                    <p class="vip retailPrice" data-bind="text:'￥'+retailPrice"></p>
                    <!-- ko if:retailPrice!=salePrice -->
                    <p class="vip salePrice" data-bind="text:':￥'+salePrice"></p>
                    <!-- /ko -->
                </div>
                <!-- /ko -->
                <!-- ko if:isMemberOnly!=1 -->
                <div class="goods_price">
                    <p class="salePrice" data-bind="text:'￥'+salePrice"></p>
                    <!-- ko if:retailPrice!=salePrice -->
                    <p class="retailPrice" data-bind="text:'￥'+retailPrice"></p>
                    <!-- /ko -->
                </div>
                <!-- /ko -->

            </a>
        </li>
        
    </ul>
    <!--搜索的内容结束-->
    <div class="nosearchData">
        没有找到您搜索的商品
    </div>
    <div class="popback"></div>
    <div class="custom" style="height: 3.7rem;">
        <p>确定要删除该商品吗？</p>
        <p class="custom_button">
            <a href="javascript:;" class="quxiao">取消</a>
            <a href="javascript:;" class="queding">确定</a>
        </p>
    </div>
</article>
@WebHelper4H5.RegisterScripts("search/search.js")
@WebHelper4H5.RegisterScripts("iscroll.js")

